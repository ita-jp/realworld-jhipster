entity Profile {
    bio String
    image String
}

entity Article {
    slug String required
    title String required
    description String required
    body String required
    createdAt ZonedDateTime required
    updatedAt ZonedDateTime required
}

entity Comment {
    id Integer required
    createdAt ZonedDateTime required
    updatedAt ZonedDateTime required
    body String required
}

entity Tag {
    id Integer required
    name String required
}

relationship OneToOne {
    Profile{user} to User with builtInEntity
}

relationship ManyToOne {
    Article{user} to User  with builtInEntity
    Comment{user} to User  with builtInEntity
    Comment{article} to Article
}

relationship ManyToMany {
    Article{tag} to Tag
    Article{favorited} to User with builtInEntity
    Profile{follower} to Profile{followee}
}
